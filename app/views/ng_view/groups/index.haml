.groups
  .container
    %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      %span.navbar-brand Groups.

    %form.form-inline{:role => "form"}
      .form-group
        %input.form-control.input-lg{"ng-model" => "newGroup.name", :type => "text"}/
      .form-group
        %button.btn.btn-primary.form-control.input-lg{"ng-click" => "addGroup()"}
          %span.glyphicon.glyphicon-plus-sign
          Group

    %div{"ng-repeat" => "group in groups"}
      %a{href: "/#/groups/{{group.id}}"}
        {{group.name}}
