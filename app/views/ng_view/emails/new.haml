-#%text-angular{"ng-model"        => "subject",
  -#"placeholder"     => "subject"}

.email

  %div.drawers
    %snap-drawer.left-draw
      .container
        %nav.navbar.navbar-inverse.navbar-fixed-top
          %span.navbar-brand Users
        .users{"ng-controller" => "UserCtrl"}
          %ul.list-unstyled
            %li{"ng-repeat" => "user in users"}
              %a{href: "#/users/{{user.id}}", title: "{{user.email}}"} {{user.name || user.email}}

          %form.form-inline{:role => "form"}
            .form-group
              %input.form-control.input-lg{"ng-model" => "newUser.email", :type => "text"}/
            .form-group
              %button.btn.btn-primary.form-control.input-lg{"ng-click" => "addUser()"}
                %span.glyphicon.glyphicon-plus-sign
                Add


  %div.content
    %snap-content{id: "content"}
      .container
        %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
          %span.navbar-brand Email.

        %br
        %br
        %text-angular-toolbar{name: "toolbar"}

        %div{"text-angular"      => true,
          "ng-model"             => "subject",
          "ta-target-toolbars"   => 'toolbar',
          "ta-text-editor-class" => "textAngular subject",
          "ta-html-editor-class" => "textAngular subject",
          "ta-focussed-class" => "focussed"}

        %div{"text-angular"      => true,
          "ng-model"             => "body",
          "ta-target-toolbars"   => 'toolbar',
          "ta-text-editor-class" => "textAngular body",
          "ta-html-editor-class" => "textAngular body",
          "ta-focussed-class" => "focussed"}

        %button{ :class => "btn btn-primary btn-small", "snap-toggle" => "left"}
          click me

