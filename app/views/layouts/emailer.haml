!!!
%html{"data-framework" => "angularjs", :lang => "en", "ng-app" => "emailer"}
  %head
    %title Emailer
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = javascript_link_tag :emailer
    %link{:href => "app/bower_components/bootstrap/dist/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "app/bower_components/Font-Awesome/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "app/bower_components/angular-snap/angular-snap.min.css", :rel => "stylesheet"}/
    %link{:href => "stylesheets/campaign.css", :rel => "stylesheet"}/
    %link{:href => "stylesheets/email.css", :rel => "stylesheet"}/

    :css
      body { padding-top: 70px; }
      .nav, .pagination, .carousel a { cursor: pointer; }
      .modal {
        display: block;
        height: 0;
        overflow: visible;
      }
      .hide {
        display: none;
      }
      .modal-body:before,
      .modal-body:after {
        display: table;
        content: " ";
      }
      .modal-header:before,
      .modal-header:after {
        display: table;
        content: " ";
      }
  %body
    %ng-view
